<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:orientation="vertical"
    tools:context="com.example.kc.easypiano.MainActivity"
    android:background="@android:color/background_dark"
    android:elevation="@dimen/abc_action_bar_default_height_material"
    style="@style/Animation.AppCompat.Dialog"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:theme="@style/Base.TextAppearance.AppCompat.Display3"
    android:transitionGroup="true"
    android:translationZ="@dimen/abc_action_bar_default_height_material"
    android:clickable="false"
    android:gravity="fill_horizontal|top|center_vertical|center|fill"
    android:touchscreenBlocksFocus="true">


    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/imageView1"
        android:scaleType="matrix"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:contextClickable="true"
        android:background="@android:drawable/ic_media_rew"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignStart="@+id/imageView1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="@android:drawable/ic_media_ff"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imageView1"
        android:layout_marginTop="32dp" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="15dp"
        android:id="@+id/imageButton3"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/abc_action_bar_default_height_material" />

</RelativeLayout>
